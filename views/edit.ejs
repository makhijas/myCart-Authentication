    <h4> To add items, scroll down to enter your id, item and quantity. If you don't know your id, simply go to your profile to find it.</h4>
    <% for( let i=0; i < foods.length; i++ ) { %>
        <div class="list">
           <ul>
              <p class="foodList"> <%= foods[i].dataValues.quantity %> </p> 
              <p class="foodList"> <%= foods[i].dataValues.item %> </p>
              <!-- <button id="delete">Delete</button> -->
              <!-- Delete button -->
              <form method="POST" action="/edit/<%= foods[i].dataValues.id %>/?_method=DELETE">
                  <button type="submit">Delete</button>
                 </form>
           </ul> 
        </div> 
     <% } %> 
   

<form action="/profile" method=POST>
    <input type="text" name="userId" value="Your ID"></input>

    <p> Please enter the item and quantity of the item you want to add to your fridge</p>

    <input type="text" name="item" value="Item"></input>
    <input type="integer"name="quantity" value="Quantity"></input>

    <input id="add" type="submit" value="Add"></input>

</form>


